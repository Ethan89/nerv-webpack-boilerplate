{
  "name": "nerv-webpack-boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "dev": "webpack-serve --open --content src --log-level warn",
    "build": "rimraf dist && webpack --progress --hide-modules",
    "deploy": "npm run build && http-server ./dist",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.(js|jsx)": [
      "prettier --config .prettierrc --write",
      "eslint",
      "git add"
    ],
    "src/**/*.(ts|tsx)": [
      "prettier --config .prettierrc --write",
      "tslint",
      "git add"
    ],
    "src/**/*.scss": [
      "prettier --config .prettierrc --write",
      "stylelint --syntax=scss",
      "git add"
    ],
    "src/**/*.css": [
      "prettier --config .prettierrc --write",
      "stylelint",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.40",
    "@babel/core": "7.0.0-beta.40",
    "@babel/node": "7.0.0-beta.40",
    "@babel/plugin-proposal-class-properties": "7.0.0-beta.40",
    "@babel/plugin-syntax-dynamic-import": "7.0.0-beta.40",
    "@babel/plugin-transform-react-jsx": "7.0.0-beta.40",
    "@babel/plugin-transform-runtime": "7.0.0-beta.40",
    "@babel/preset-env": "7.0.0-beta.40",
    "autoprefixer": "7.2.4",
    "babel-eslint": "8.2.1",
    "babel-loader": "8.0.0-beta.0",
    "babel-plugin-transform-es3-member-expression-literals": "6.22.0",
    "babel-plugin-transform-es3-property-literals": "6.22.0",
    "cross-env": "5.1.3",
    "css-loader": "0.28.8",
    "eslint": "4.16.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-standard": "11.0.0-beta.0",
    "eslint-config-standard-jsx": "4.0.2",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-node": "6.0.0",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-react": "7.6.1",
    "eslint-plugin-standard": "3.0.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "1.1.6",
    "html-webpack-plugin": "^3.2.0",
    "http-server": "^0.11.1",
    "husky": "0.14.3",
    "json-loader": "0.5.7",
    "lint-staged": "7.0.0",
    "node-sass": "^4.9.0",
    "postcss-loader": "2.0.10",
    "prettier": "1.11.1",
    "raw-loader": "0.5.1",
    "rimraf": "2.6.2",
    "sass-loader": "6.0.6",
    "style-loader": "0.19.1",
    "stylelint": "9.1.1",
    "stylelint-config-prettier": "2.1.0",
    "stylelint-config-standard": "18.1.0",
    "ts-loader": "3.3.1",
    "tslint": "5.8.0",
    "tslint-config-prettier": "1.9.0",
    "tslint-config-standard": "7.0.0",
    "tslint-loader": "3.5.3",
    "tslint-react": "3.4.0",
    "typescript": "2.6.2",
    "uglifyjs-webpack-plugin": "1.2.2",
    "url-loader": "0.6.2",
    "webpack": "4.10.1",
    "webpack-cli": "^3.0.1",
    "webpack-dev-server": "3.1.4",
    "webpack-serve": "^1.0.2"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.40",
    "es5-polyfill": "0.0.6",
    "es6-object-assign": "1.1.0",
    "es6-promise": "4.1.1",
    "nervjs": "1.2.16"
  }
}
